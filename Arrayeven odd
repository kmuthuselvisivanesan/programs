//Program to find the no.of even and odd elements in an array

package learning;

import java.util.Scanner;

public class Arrayevenodd {

	public static void main(String[] args) {
		int i,n,even=0,odd=0;
		System.out.println("Enter the number:");
		Scanner sc = new Scanner(System.in);
		n=sc.nextInt();
		int a[]=new int[n];
		for(i=0;i<n;i++)
		{
			System.out.println("Elements of a["+i+"]");
			a[i]=sc.nextInt();
		}
		
		for(int element :a)
		{
			if((element%2==0))
			{
				even++;
			}
			else
			{
				odd++;
			}
		}
		System.out.println("Total no.of even element"+even);
		System.out.println("Total no.of odd elements"+odd);

	}

}

output:

